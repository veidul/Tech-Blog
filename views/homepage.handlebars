
{{#each blogs as |blog| }}
<div class=blog>
    <div>
        <h2>
            <a href="/blog/{{blog.id}}">{{blog.title}}</a>
        </h2>
        {{!-- need to add helper function for format_date --}}
        <p>Created by: {{blog.user.name}} on {{format_date blog.createdAt}}</p>

    </div>
<div>
    <p>
        {{blog.body}}
    </p>
</div>
</div>
{{/each}}